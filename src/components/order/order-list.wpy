<style type="less">
  page {
    font-size: 16px;
    color: #333;
  }

  /*每一行数据*/
  .row {
    background: white;
    border-bottom: 15px;
    padding: 0 15px;
    margin-bottom: 10px;
  }

  /*商户信息*/
  .shop {
    display: flex;
    flex-direction: row;
    align-items: center;
  }

  /*logo*/
  .logo {
    width: 40px;
    height: 40px;
    border-radius: 50%;
  }

  /*名称与状态*/
  .summary {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    border-bottom: 1px solid #eee;
    height: 44px;
    align-items: center;
    flex: 1;
  }

  /*名称*/
  .title {
    margin-left: 10px;
  }

  /*状态*/
  .status {
    font-size: 14px;
    text-align: right;
  }

  /*商品信息*/
  .goods {
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 14px;
    height: 44px;
    border-bottom: 1px solid #eee;
  }

  /*商品名称*/
  .goods .title {
    padding-left: 44px;
    color: #666;
  }

  /*商品小计*/
  .goods .total {
    color: #000;
    text-align: right;
    font-weight: bold;
  }

  .goods .total:before {
    content: '$';
  }

  /*支付按钮*/
  .payment {
    display: flex;
    flex-direction: row;
    justify-content: flex-end;
  }

  .payment .button {
    margin: 14px 0;
    border: solid 1px #f60;
    border-radius: 3px;
    padding: 7px 20px;
    color: #f60;
    font-size: 14px;
  }

  /*加载提示*/
  /*上拉加载提示*/
  .loading-indicator {
    text-align: center;
    font-size: 12px;
    margin: 10px 0;
    line-height: 300%;
  }
</style>

<template>
  <!-- 订单列表 -->
  <view class="order-container">
    <scroll-view scroll-y scroll-with-animation style="height: {{scrollHeight + 'px'}}" @scrolltolower="lower">
      <!-- 每个订单 -->
      <repeat for="{{orderList}}" key="id" index="id" item="item">
        <view class="row">
          <!-- 商户信息 -->
          <view class="shop">
            <image src="data:image/png;base64," class="logo" />
            <view class="summary">
              <view class="title">{{item.store}}</view>
              <view class="status">
                <block wx:if="{{item.status == 0}}">制作中</block>
                <block wx:elif="{{item.status == 1}}">等待支付</block>
                <block wx:elif="{{item.status == 2}}">派送中</block>
                <block wx:elif="{{item.status == -1}}">已取消</block>
              </view>
            </view>
          </view>
          <!-- 商品信息 -->
          <view class="goods">
            <view class="title">下单时间: {{item.orderedAt.$date}}</view>
            <view class="total">{{item.totalAmount}}</view>
          </view>
          <!-- 支付按钮 -->
          <view class="payment">
            <view class="button" @tap="showDetail">
              查看
            </view>
          </view>
        </view>
      </repeat>
    </scroll-view>
  </view>
</template>
<script>
  import wepy from 'wepy'
  import { connect } from 'wepy-redux'

  @connect({
    orderList (state) {
      return state.order.data
    },
    orderTotalCount (state) {
      return state.order.count
    }
  })

  export default class OrderList extends wepy.component {
    data = {
      scrollHeight: 0,
      showLoading: true
    }

    methods = {
      showDetail () {
        console.log('show detail')
      },
      lower () {
        console.log('scroll to lower')
      }
    }

    onLoad () {
      wepy.getSystemInfo().then((res) => {
        this.scrollHeight = res.windowHeight
        this.$apply()
      })
    }
  }
</script>
